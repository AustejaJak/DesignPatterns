<Window x:Class="BloonsGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200">
    <Grid x:Name="MainMenu">
        <Grid.Background>
            <ImageBrush ImageSource = "/Forms/Resources/BloonsHomeScreen.jpg" />
        </Grid.Background>

        <Button Content="Start Game" HorizontalAlignment="Center" Height="84" Margin="0,326,0,0" VerticalAlignment="Top" Width="280" AutomationProperties.Name="StartGameButton" Click="Button_Click" FontSize="26" FontWeight="UltraLight" />
        <ComboBox x:Name="MapComboBox" HorizontalAlignment="Center" Height="27" Margin="0,196,0,0" VerticalAlignment="Top" Width="234">
        </ComboBox>
        <Label x:Name="SelectMapLabel" Content="Select Map" HorizontalAlignment="Center" Height="50" Margin="0,130,0,0" VerticalAlignment="Top" Width="175" FontSize="30" FontWeight="UltraBold" />
        <Label x:Name="SelectMapLabelError" Content="Please select a map" HorizontalAlignment="Center" Height="22" Margin="0,217,0,0" VerticalAlignment="Top" Width="88" FontSize="9" Foreground="Red" Visibility="Collapsed" />
    </Grid>
</Window>